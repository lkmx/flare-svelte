{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "allowJs": true,
      "checkJs": true,
      "paths": {
        "@/*": ["src/*"]
      },
      "isolatedModules": true,
      "types": ["svelte"]
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  